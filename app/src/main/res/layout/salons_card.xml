<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_horizontal"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

<android.support.v7.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_id"
    android:layout_height="180dp"
    android:layout_width="350dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="5dp"
    android:elevation="5dp"
>
    <LinearLayout
        android:id="@+id/poster_image"
        android:layout_height="fill_parent"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/background_fone"
            android:layout_weight="5.5"
            android:layout_height="0dp"
            android:layout_width="match_parent"/>

        <LinearLayout
            android:orientation="horizontal"
            android:background="#FFF"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="2">

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/name_of_the_salon"
                    android:textColor="#444444"
                    android:gravity="center"
                    android:textSize="17sp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:text="AS Salem studio"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:layout_width="0dp"
                    android:layout_weight="1.8"
                    android:maxWidth="80dp"
                    tools:ignore="NestedWeights" />
                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.7"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:text="5.2"
                        android:id="@+id/rating"
                        android:textColor="#818181"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content" />
                    <ImageView
                        android:background="@drawable/star"
                        android:layout_height="17dp"
                        android:layout_width="17dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                >

                <TextView
                    android:textColor="#818181"
                    android:id="@+id/salon_address"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Шаляпина 92/2а"
                    android:layout_width="match_parent"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:singleLine="true"
                    />

                <TextView
                    android:textColor="#818181"
                    android:id="@+id/salon_working_hours"
                    android:layout_height="0dp"
                    android:text="Работает до 22:00"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:singleLine="true"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
</LinearLayout>
